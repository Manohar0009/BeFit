<!--                            android:layout_marginTop="16dp"-->
<!--                            android:text="Edit"-->
<!--                            android:onClick="onEditProfileButtonClick" />-->

<!--                    </LinearLayout>-->
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Social Media Links Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FBE9B1"
                    android:orientation="vertical"
                    android:padding="20dp"
                    app:cardCornerRadius="8dp">

                    <TextView
                        android:id="@+id/bioTitleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bio"
                        android:textColor="@color/dark_blue"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/bioEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="Tell about yourself"
                        android:textColorHint="@color/black"
                        android:textColor="#F46D6D"
                        android:textSize="16sp" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Social Media Links Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FDC5C1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/socialMediaTitleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Social Media"
                        android:textColor="@color/dark_blue"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <GridLayout
                        android:layout_width="106dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:columnCount="3"
                        android:rowCount="1">

                    </GridLayout>

                    <ImageButton
                        android:id="@+id/linkedinButton"
                        android:layout_width="78dp"
                        android:layout_height="67dp"
                        android:background="@null"
                        android:contentDescription="LinkedIn"
                        android:scaleType="fitCenter"
                        android:src="@drawable/linkedinlogo" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <!-- Buttons for Save and Edit -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Save"
                    android:onClick="onSaveProfileButtonClick" />

                <Button
                    android:id="@+id/editprofileButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Edit"
                    android:onClick="onEditProfileButtonClick" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
